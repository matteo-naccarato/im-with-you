<%- include('../partials/header') %>

    <div class="container-fluid">

        <div class="col-12 mb-4">

            <div class="card border-left-secondary shadow h-100 py-2">


                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold">Crea PERSONA</h6>
                    <span id="status"></span>
                </div>

                <div class="card-body">

                    <form action="/admin/people/create" method="POST" enctype="multipart/form-data" id="uploadForm">

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="name">Nome <span class="text-danger"><%- include('../partials/form/requiredSymbol') %></span></label>
                                    <input type="text" name="name" id="name" class="form-control" required>
                                </div>

                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="surname">Cognome <span class="text-danger"><%- include('../partials/form/requiredSymbol') %></span></label>
                                    <input type="text" name="surname" id="surname" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="dateOfBirth">Data di nascita</label>
                                    <input type="date" name="dateOfBirth" id="dateOfBirth" class="form-control">
                                </div>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-md-7">
                                <%- include('../partials/form/countries') %>
                            </div>

                            <div class="col-md-5">
                                <div class="form-group mb-3">

                                    <div class="col-12 d-flex justify-content-between align-items-center mt-1">
                                        <label for="quotationMarksColor">Colore</label>
                                        <input type="color" name="quotationMarksColor" id="quotationMarksColor" value="#8A817C" class="form-control">
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="job">Lavoro</label>
                            <input type="text" name="job" id="job" class="form-control">
                        </div>

                        <%- include('../partials/form/imageUpload') %>


                            <%- include('../partials/form/required') %>

                </div>
                <div class="card-footer ">
                    <div id="input-group ">
                        <button type="submit " class="btn btn-primary mb-2 "><i class="fas fa-check "></i> | Conferma</button>
                        <a href="/admin/people ">
                            <button type="button " class="btn btn-dark mb-2 "><i class="fas fa-history "></i> | Annulla</button>
                        </a>
                    </div>
                    </form>
                </div>


            </div>
        </div>

    </div>

    <script src="/js/dateOfBirth.js"></script>
    <script src="/js/admin/utilsS3.js"></script>


    <%- include('../partials/footer') %>
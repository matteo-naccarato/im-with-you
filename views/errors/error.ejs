<body>

    <!-- page wrapper -->
    <div id="wrapper">


        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand topbar mb-4 static-top shadow">

                    <a href="/" class="d-flex justify-content-center align-items-center">
                        <i class="far fa-heart text-primary"></i>&nbsp;<span class="d-none d-sm-block text-dark"> | Errore</span>
                    </a>
                </nav>
                <!-- End of Topbar -->


                <div class="container-fluid d-flex flex-column justify-content-center align-items-center">
                    <div class="col-10">
                        <div class="row">
                            <div class="col-md-12 d-flex justify-content-center align-items-center">
                                <i class="fas fa-exclamation-triangle fa-2x text-danger"></i>
                                <span class="text-dark px-5">|</span>
                                <div>
                                    <h3>
                                        <span class="font-weight-bold">
                                        <%= code %>
                                    </span>,
                                        <span class="font-italic">
                                        <%= message %>
                                    </span>
                                    </h3>
                                </div>
                            </div>
                        </div>

                        <div class="row my-5">
                            <div class="col-md-12 d-flex justify-content-center">
                                <div class="spinner-border mx-3"></div>
                                Redirecting to <a href="/login" class="text-info font-italic">&nbsp;login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        setTimeout(function() {
            window.location = '/login'
        }, 500)
    </script>
